<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="field_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="field_list_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="field_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#888</item>
    </style>

    <style name="field_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="group_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="group_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divider_h">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">1dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:background">#DDD</item>
    </style>
</resources>